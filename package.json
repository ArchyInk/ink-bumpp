{
  "name": "version-bump-prompt",
  "version": "5.0.4",
  "description": "Automatically (or with prompts) bump your version number, commit changes, tag, and push to Git",
  "keywords": [
    "version",
    "bump",
    "npm",
    "node",
    "bower",
    "package",
    "git",
    "tag",
    "push",
    "prompt"
  ],
  "author": {
    "name": "James Messinger",
    "url": "https://jamesmessinger.com"
  },
  "license": "MIT",
  "homepage": "https://jstools.dev/version-bump-prompt",
  "repository": {
    "type": "git",
    "url": "https://github.com/JS-DevTools/version-bump-prompt.git"
  },
  "main": "lib/index.js",
  "types": "lib/index.d.js",
  "bin": {
    "bump": "bin/bump.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "clean": "shx rm -rf .nyc_output coverage lib",
    "lint": "npm run lint:typescript && npm run lint:javascript",
    "lint:typescript": "tslint -p tsconfig.json",
    "lint:javascript": "eslint test",
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "mocha && npm run lint",
    "coverage": "nyc mocha",
    "upgrade": "npm-check -u",
    "bump": "node bin/bump.js --tag --push --all",
    "release": "npm run upgrade && npm run clean && npm run build && npm test && npm run bump"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/command-line-args": "^5.0.0",
    "@types/globby": "^9.1.0",
    "@types/inquirer": "^6.0.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.12",
    "@types/semver": "^6.0.1",
    "chai": "^4.2.0",
    "chai-exec": "^1.1.1",
    "coveralls": "^3.0.4",
    "del": "^5.0.0",
    "eslint": "^6.0.1",
    "eslint-config-modular": "^7.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^6.1.4",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "shx": "^0.3.2",
    "strip-ansi": "^5.2.0",
    "tslint": "^5.18.0",
    "tslint-modular": "^1.4.1",
    "typescript": "^3.5.2",
    "typescript-tslint-plugin": "^0.5.3"
  },
  "dependencies": {
    "command-line-args": "^5.1.1",
    "detect-indent": "^6.0.0",
    "detect-newline": "^3.0.0",
    "ez-spawn": "^2.1.3",
    "globby": "^10.0.0",
    "inquirer": "^6.4.1",
    "log-symbols": "^3.0.0",
    "semver": "^6.2.0"
  },
  "engines": {
    "node": ">=7"
  }
}
